root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
# The files are utf-8 encoded
charset = utf-8

[*.{js,jsx,ts,tsx,vue}]
max_line_length = 100

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
